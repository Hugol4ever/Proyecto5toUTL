<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ddd_market.ddd_market.DetalleProducto"
    tools:showIn="@layout/activity_detalle_producto">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:layout_weight="0.19">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@color/fonditoTrasnparente"
            android:layout_height="10dp"></LinearLayout>

        <TextView
            android:id="@+id/tvNombreP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Nombre Producto"
            android:textAlignment="center"
            android:textColor="@color/colorPrincipal"
            android:textSize="19dp" />

        <TextView
            android:text="Marca:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMarcaP"
            android:textAlignment="center"
            android:layout_margin="5dp" />

        <TextView
            android:text="Categoria:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCategoriaP"
            android:textAlignment="center"
            android:layout_margin="5dp" />

        <TextView
            android:text="Existencia:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvExistenciaP"
            android:textAlignment="center"
            android:layout_margin="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.80"
                android:text="Precio:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="$1000"
                android:textAlignment="textEnd"
                android:textColor="@color/precios"
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.18"
                android:text="Precio promociÃ³n:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPromocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="$1000"
                android:textAlignment="textEnd"
                android:textColor="@color/preciosPromocion"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
